{
    "name": "Tag list",
    "description": "List of tags on the blog",
    "version": 1.0,
    "defaults":
    {
        "heading": "Tags",
        "numtoshow": 10,
        "lowerlimit": 1,
        "display": "list",
        "sort": "count"
    },
    "form-configuration":
    {
        "onsubmitaction": "return submitConfigureWidgetForm(this);",
        "addfooter": false,
        "fields":
        [
            {
                "type": "text",
                "name": "widget[heading]",
                "label": "Widget Heading",
                "current": "[!data.heading]"
            },
            {
                "type": "text",
                "name": "widget[numtoshow]",
                "label": "Maximum number of tags to display",
                "current": "[!data.numtoshow]"
            },
            {
                "type": "text",
                "name": "widget[lowerlimit]",
                "label": "Only show tags with at least this number of associated posts",
                "current": "[!data.lowerlimit]"
            },
            {
                "type": "dropdown",
                "values":
                {
                    "List": "list",
                    "Cloud": "cloud"
                },
                "name": "widget[display]",
                "label": "How should the tags be displayed",
                "current": "[!data.display]"
            },
            {
                "type": "dropdown",
                "values":
                {
                    "Text": "text",
                    "PostCount": "count"
                },
                "name": "widget[sort]",
                "label": "How should the tags be ordered",
                "current": "[!data.sort]"
            }
        ]
    }
}