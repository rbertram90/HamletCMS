{
    "name": "Custom HTML",
    "description": "Display a simple block of HTML",
    "version": 1.0,
    "defaults":
    {
    },
    "form-configuration":
    {
        "onsubmitaction": "return submitConfigureWidgetForm(this);",
        "addfooter": false,
        "fields":
        [
            {
                "type": "text",
                "name": "widget[heading]",
                "label": "Heading",
                "current": "[!data.heading]"
            },
            {
                "type": "memo",
                "name": "widget[content]",
                "label": "Content",
                "current": "[!data.content]"
            }
        ]
    }
}