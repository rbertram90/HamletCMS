<IfModule mod_rewrite.c>
    RewriteEngine on

    ErrorDocument 403 /accessdenied
    ErrorDocument 404 /notfound    

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^$ app/public/ [L]

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule (.*) app/public/$1 [L]
</IfModule>